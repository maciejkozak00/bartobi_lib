{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake -S . -B build && cmake --build build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Configure and build using CMake"
        },
        {
            "label": "CMake Test",
            "type": "shell",
            "command": "cd build && ctest",
            "group": "test",
            "problemMatcher": [],
            "detail": "Run CTest in build directory"
        }
    ]
}